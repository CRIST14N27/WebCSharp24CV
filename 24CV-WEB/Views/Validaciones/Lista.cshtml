@model IEnumerable<_24CV_WEB.Models.Curriculum>

<h1 class="text-center">Lista de curriculums</h1>

<div class="row">
    <div class="col-12">
      <form asp-action="VPC" asp-controller="Validaciones" method="post" enctype="multipart/form-data">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Fecha Nacimiendo</th>
                        <th>CURP</th>
                        <th>Image Path</th>
                        <th>Foto</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellidos</td>
                            <td>@item.FechaNacimiento</td>
                            <td>@item.CURP</td>
                            <td>@item.RutaFoto</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.RutaFoto))
                                {
                                    <img src="~/Fotos/@item.RutaFoto" width="150" height="150">
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button class="btn btn-primary" type="submit">Ver Perfil</button>
      </form>
    </div>
</div>