@model _24CV_WEB.Models.Curriculum

<div class="row justify-content-center">
    <section class="col col-lg-3 p-3 rounded-4 align-items-center justify-content-center" style="background-color: gray">
        <div style="margin: 0 auto 24px; display: flex; justify-content: center">
            <img src="~/Fotos/@Model.RutaFoto" width="240" height="240" class="rounded-circle" />
        </div>
        <h3>Nombre: @Model.Nombre @Model.Apellidos</h3>
        <div>
            <div class="rounded-2" style="background-color: white;">
                <p class="text-black text-center">DESCRIPCIÓN</p>
            </div>
            <p>lorem impsum dolor sit amet consectur adapicsin elit. habitasse diam etementirn</p>
            <div class="rounded-2" style="background-color: white;">
                <p class="text-black text-center">EMAIL</p>
            </div>
            <p>Correo: @Model.Email</p>
        </div>
    </section>
    <section class="col p-3 col-lg-5">
        <section>
            <div class="rounded-2" style="background-color: #db93c4;">
                <h5 class="text-center">Informacion Personal</h5>
            </div>
            <div>
                <P>Fecha de Nacimiento: <span>@Model.FechaNacimiento.ToShortDateString()</span></P>
            </div>
            <div>
                <P>CURP: <span>@Model.CURP</span></P>
            </div>
            <div class="rounded-2" style="background-color: #db93c4;">
                <h5 class="text-center">IDIOMAS</h5>
            </div>
            <div>
                <P>Ingles: <span>@Model.PorcentajeIngles.ToString()%</span></P>
            </div>
            <div class="rounded-2" style="background-color: #db93c4;">
                <p class="text-black text-center">DIRECCIÓN</p>
            </div>
            <p>@Model.Dirección</p>
        </section>
    </section>
</div>